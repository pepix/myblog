<h2>Add New Post</h2>
<%= form_for :post, url: posts_path do |f| %>
<p>
  <div class='form-group'>
    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'enter title' %>
      <% if @post.errors.messages[:title].any? %>
        <span class="error">
          <%= @post.errors.messages[:title][0] %>
        </span>
      <% end %>
    </div>
  </div>
</p>
<p>
  <div class="col-sm-10">
    <%= f.text_area :body, placeholder: 'enter body text' %>
    <% if @post.errors.messages[:body].any? %>
      <span class="error">
        <%= @post.errors.messages[:body][0] %>
      </span>
    <% end %>
  </div>
</p>
<p>
  <%= f.submit class: 'btn btn-default' %>
</p>
<% end %>
